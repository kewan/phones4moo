{% extends 'Phones4MooStoreBundle::base.html.twig' %}

{% block body -%}
    <div class="container" style="margin-top: 40px">
        <div class="row">
            <div class="col-sm-6"><img src="http://lorempixel.com/400/300/animals/{{product.id}}" alt="{{product.name}}"></div>
            <div class="col-sm-6">
                <h1>{{product.name}}</h1>
                <p>&pound;{{product.price|number_format(2)}}</p>
                <ul>
                    {% for feature in product.getFeatures %}
                        <li>{{feature.title}}</li>
                    {% endfor %}
                </ul>
                
                <a href="{{ path('transaction_new', {'product' : product.id}) }}" class="btn btn-lg btn-primary">Buy now</a>
            </div>
        </div>           
    </div>
{% endblock %}
