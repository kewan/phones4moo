{% extends 'Phones4MooStoreBundle::base.html.twig' %}

{% block body -%}
    <div class="container">
        <div class="page-header">
            <h1>Products</h1>
        </div>

        <div class="row">
            {% for product in products %}
                
                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="http://lorempixel.com/300/200/animals/{{product.id}}" alt="{{product.name}}">
                        <div class="caption">
                            <h3><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.name }}</a></h3>
                            <p>&pound;{{product.price|number_format(2)}}</p>
                            <ul>
                                {% for feature in product.getFeatures %}
                                    <li>{{feature.title}}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
