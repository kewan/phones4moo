{% extends 'Phones4MooStoreBundle::base.html.twig' %}

{% block body -%}

<div class="container">
    <div class="page-header">
        <h1>New Feature</h1>
    </div>
    
    {{ form_start(form) }}
    {{ form_errors(form) }}


    {{ form_row(form.title) }}

    <div class="form-group">
        {{ form_widget(form.submit, {'attr': {'class' : 'btn btn-primary' }}) }}
    </div>

    {{ form_end(form) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path('feature') }}">
                Back to the list
            </a>
        </li>
    </ul>
</div>
{% endblock %}
