{% extends 'Phones4MooStoreBundle::base.html.twig' %}

{% block body -%}
<div class="container">
    {{ include('Phones4MooAdminBundle::adminMenu.html.twig') }}
    
    <div class="page-header">
        <h1>Transactions</h1>
    </div>


    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Product</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.customer.firstname}}</td>
                <td>{{ entity.customer.lastname}}</td>
                <td>{{ entity.customer.email}}</td>
                <td>{{ entity.product }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
